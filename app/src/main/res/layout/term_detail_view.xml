<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/lblTermTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Term Detail"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title:" />

    <EditText
        android:id="@+id/txtTermTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date:" />

    <EditText
        android:id="@+id/txtTermStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="01/01/2019"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date:" />

    <EditText
        android:id="@+id/txtTermEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="01/01/2019"/>

    <Button
        android:id="@+id/btnViewCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewCourses"
        android:text="View Courses" />

    <Button
        android:id="@+id/btnSaveTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveTerm"
        android:text="Save" />

    <Button
        android:id="@+id/btnDeleteTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteTerm"
        android:text="Delete" />
</LinearLayout>